{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://keep-starknet-strange.github.io/starknet-agentic/spec/session-signature-v2.schema.json",
  "title": "Session signature v1+v2 conformance vectors",
  "type": "object",
  "additionalProperties": false,
  "required": ["spec", "version", "vectors", "sessionVectors"],
  "properties": {
    "spec": {
      "type": "string",
      "const": "session-signature-v2"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "vectors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/outsideExecutionVector"
      }
    },
    "sessionVectors": {
      "type": "array",
      "minItems": 4,
      "items": {
        "$ref": "#/$defs/sessionVector"
      }
    }
  },
  "$defs": {
    "felt": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{1,63}$"
    },
    "bigNumberish": {
      "type": "string",
      "pattern": "^(0x[0-9a-fA-F]{1,63}|[0-9]{1,76})$"
    },
    "call": {
      "type": "object",
      "additionalProperties": false,
      "required": ["to", "selector", "calldata"],
      "properties": {
        "to": {
          "$ref": "#/$defs/felt"
        },
        "selector": {
          "$ref": "#/$defs/felt"
        },
        "calldata": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/felt"
          }
        }
      }
    },
    "outsideExecutionDomain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "chainId", "revision"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "const": "2"
        },
        "chainId": {
          "$ref": "#/$defs/felt"
        },
        "revision": {
          "$ref": "#/$defs/bigNumberish"
        }
      }
    },
    "outsideExecutionMessage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["caller", "nonce", "execute_after", "execute_before", "calls"],
      "properties": {
        "caller": {
          "$ref": "#/$defs/bigNumberish"
        },
        "nonce": {
          "$ref": "#/$defs/bigNumberish"
        },
        "execute_after": {
          "$ref": "#/$defs/bigNumberish"
        },
        "execute_before": {
          "$ref": "#/$defs/bigNumberish"
        },
        "calls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/call"
          }
        }
      }
    },
    "outsideExecutionExpected": {
      "type": "object",
      "additionalProperties": false,
      "required": ["domainHash", "messageHash"],
      "properties": {
        "domainHash": {
          "$ref": "#/$defs/felt"
        },
        "messageHash": {
          "$ref": "#/$defs/felt"
        },
        "signature": {
          "type": "object",
          "additionalProperties": false,
          "required": ["r", "s"],
          "properties": {
            "r": {
              "$ref": "#/$defs/felt"
            },
            "s": {
              "$ref": "#/$defs/felt"
            }
          }
        }
      }
    },
    "outsideExecutionVector": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "description", "mode", "accountAddress", "domain", "message", "expected"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_\\-]*$"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "const": "v2_snip12"
        },
        "accountAddress": {
          "$ref": "#/$defs/felt"
        },
        "domain": {
          "$ref": "#/$defs/outsideExecutionDomain"
        },
        "message": {
          "$ref": "#/$defs/outsideExecutionMessage"
        },
        "expected": {
          "$ref": "#/$defs/outsideExecutionExpected"
        }
      }
    },
    "sessionPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["accountAddress", "chainId", "nonce", "validUntil", "calls"],
      "properties": {
        "accountAddress": {
          "$ref": "#/$defs/felt"
        },
        "chainId": {
          "$ref": "#/$defs/felt"
        },
        "nonce": {
          "$ref": "#/$defs/felt"
        },
        "validUntil": {
          "$ref": "#/$defs/felt"
        },
        "calls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/call"
          }
        }
      }
    },
    "sessionExpected": {
      "type": "object",
      "additionalProperties": false,
      "required": ["shouldVerify", "signingMessageHash", "verificationMessageHash"],
      "properties": {
        "shouldVerify": {
          "type": "boolean"
        },
        "signingMessageHash": {
          "$ref": "#/$defs/felt"
        },
        "verificationMessageHash": {
          "$ref": "#/$defs/felt"
        },
        "signingDomainHash": {
          "$ref": "#/$defs/felt"
        },
        "verificationDomainHash": {
          "$ref": "#/$defs/felt"
        },
        "failureCode": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$"
        }
      }
    },
    "sessionVector": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "description",
        "mode",
        "status",
        "signingPayload",
        "verificationPayload",
        "expected"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_\\-]*$"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "enum": ["v1_legacy", "v2_snip12"]
        },
        "status": {
          "type": "string",
          "enum": ["valid", "invalid"]
        },
        "signingPayload": {
          "$ref": "#/$defs/sessionPayload"
        },
        "verificationPayload": {
          "$ref": "#/$defs/sessionPayload"
        },
        "expected": {
          "$ref": "#/$defs/sessionExpected"
        }
      }
    }
  }
}
