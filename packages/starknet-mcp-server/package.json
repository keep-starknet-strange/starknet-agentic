    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "4.0.18",
    "tsup": "^8.5.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  }
}
