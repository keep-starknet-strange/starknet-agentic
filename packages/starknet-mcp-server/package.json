{
  "name": "@starknet-agentic/mcp-server",
  "version": "0.1.0",
  "description": "MCP server exposing Starknet operations as tools for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
