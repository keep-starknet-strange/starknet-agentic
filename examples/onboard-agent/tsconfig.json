{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@starknet-agentic/onboarding-utils": [
        "../../packages/starknet-onboarding-utils/src/index.ts"
      ]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["*.ts", "steps/*.ts"],
  "exclude": ["node_modules", "dist"]
}
